@startuml White
entity Artist {
    * id: VARCHAR
    --
    * name: VARCHAR
    --
    instagram: VARCHAR
    facebook: VARCHAR
    twitter: VARCHAR
    wikipedia: VARCHAR
    * bio: TEXT
}

entity Album {
    * id: VARCHAR
    --
    * title: VARCHAR
    * release: YEAR
    * image: VARCHAR
}

entity Song {
    * id: VARCHAR
    --
    * album_id: VARCHAR
    * title: VARCHAR
    * duration: INT
}

entity PlaylistGenre {
    * id: VARCHAR
    --
    * name: VARCHAR
    * image: VARCHAR
    * icon: VARCHAR
}

entity Playlist {
    * id: VARCHAR
    --
    * name: VARCHAR
    description: TEXT
    image: VARCHAR
    category_id: VARCHAR
    * user_id: VARCHAR
}

entity PodcastGenre {
    * id: VARCHAR
    --
    * name: VARCHAR
    * image: VARCHAR
}

entity Podcast {
    * id: VARCHAR
    --
    * name: VARCHAR
    about: TEXT
    image: VARCHAR
    category_id: VARCHAR
    --
    * user_id: VARCHAR
}

entity Episode {
    * id: VARCHAR
    --
    * podcast_id: VARCHAR
    * title: VARCHAR
    description: TEXT
    published_at: DATE
    duration: INT
}

entity User {
    * id: VARCHAR
    --
    * email: VARCHAR
    * name: VARCHAR
    birthday: DATE
}

entity Concert {
    * id: VARCHAR
    --
    * location: VARCHAR
    * event_at: DATETIME
    * url: VARCHAR
    longitude: DOUBLE
    latitude: DOUBLE
}

